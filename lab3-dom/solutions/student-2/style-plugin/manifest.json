{
  "manifest_version": 3,
  "name": "SteamPunk KAI",
  "version": "1.0",
  "description": "Добавляет кнопку для переключения STEAMPUNK режима",
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts/*", "textures/*"],
      "matches": ["https://kai.ru/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://kai.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}