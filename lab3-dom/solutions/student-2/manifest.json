{
  "manifest_version": 3,
  "name": "KAI SteamPunk Theme",
  "version": "1.0",
  "description": "SteamPunk стиль для сайта kai.ru с металлическими текстурами и винтажными цветами",
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["textures/*"],
      "matches": ["https://kai.ru/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://kai.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}